{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="flex flex-col items-center h-screen">
<div class="sm:mx-auto sm:w-full sm:max-w-md">
			<h2 class="my-6 text-center text-3xl font-bold text-gray-700">
                 Sign in
			</h2>
		</div>
    <div class="w-full max-w-md">
        <div class="bg-white shadow-md rounded-lg px-8 p-12">

            {% if error %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-6 text-center">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="text-blue-500 hover:text-blue-700 underline">Logout</a>
                </div>
            {% endif %}

            <form method="post">
                <div class="mb-4">
                    <label for="inputEmail" class="block text-gray-700 font-bold mb-2">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-emerald-500" autocomplete="email" required autofocus>
                </div>

                <div class="mb-4">
                    <label for="inputPassword" class="block text-gray-700 font-bold mb-2">Password</label>
                    <input type="password" name="password" id="inputPassword" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-emerald-500" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="mb-6">
                    <label class="inline-flex items-center">
                        <input type="checkbox" name="_remember_me" class="form-checkbox h-5 w-5 text-slate-800">
                        <span class="ml-2 text-gray-700 font-semibold">Remember me</span>
                    </label>
                </div>

                <button class="w-full bg-gradient-to-r from-emerald-600 to-emerald-700 hover:bg-blue-700 shadow-lg text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                    Sign in
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}