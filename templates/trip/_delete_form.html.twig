<form method="post" action="{{ path('app_trip_delete', {'id': trip.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trip.id) }}">
    <button class="btn bg-gradient-to-r from-red-600 to-red-700 hover:bg-gray-400 text-white font-bold py-2 px-2 rounded">Delete</button>
</form>
