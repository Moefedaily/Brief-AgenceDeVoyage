{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <div class="my-4">
        <div class="mb-4">
            <a href="{{ path('app_register') }}" class="bg-gradient-to-r from-emerald-600 to-emerald-700 hover:bg-gray-400 text-white font-bold py-2 px-4 rounded">Create New User</a>
        </div>
    </div>

    <div class="w-full overflow-hidden rounded-lg shadow-lg  ">
        <table class="table-auto w-full ">
            <thead>
                <tr class="bg-gray-200 text-gray-700 ">
                    <th class="p-4">ID</th>
                    <th class="p-4">Email</th>
                    <th class="p-4">Roles</th>
                    <th class="p-4">Name</th>
                    <th class="p-4">Phone</th>
                    <th class="p-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr class="bg-white border-b transition duration-300 ease-in-out hover:bg-gray-100">
                        <td class="p-4">{{ user.id }}</td>
                        <td class="p-4">{{ user.email }}</td>
                        <td class="py-2 px-2">{{ user.roles ? user.roles|join(', ') : '' }}</td>
                        <td class="p-4">{{ user.firstName }} {{ user.lastName }}</td>
                        <td class="p-4">{{ user.phone }}</td>
                        <td class="p-4">
                            <div class="flex  justify-center space-x-2">
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="px-2 py-1 text-amber-700 bg-white border border-amber-600 rounded hover:border-amber-900">Show</a>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="px-2 py-1 text-emerald-700 bg-white border border-emerald-600 rounded hover:border-emerald-800">Edit</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="py-4 px-6 text-center">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}